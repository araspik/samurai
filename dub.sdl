name "smake"
description "A Make program for SDLang-formatted Makefiles."
authors "ARaspiK"
copyright "Copyright Â© 2018, ARaspiK"
license "MIT"

targetType "none"

dependency "smake:lib" version="*"
dependency "smake:app" version="*"

subPackage {
	name "lib"
	targetType "library"
	targetName "smake"
	targetPath "build"
	sourcePaths "smake"
	importPaths "."

	dependency "sdlang-d" version="~>0.10.4"
}

subPackage {
	name "app"
	targetType "executable"
	targetName "smake"
	targetPath "build"
	sourcePaths "front"
	importPaths "."

	dependency "smake:lib" version="*"
}
